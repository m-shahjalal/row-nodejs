{
	"extends": ["prettier", "airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"env": {
		"commonjs": true,
		"node": true
	},
	"rules": {
		"no-console": 0,
		"no-underscore-dangle": "off",
		"tabWidth": 4,
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 700,
				"semi": true,
				"code": 80,
				"allow": "_bar",
				"parser": "flow"
			}
		]
	},
	"plugins": ["prettier"]
}
